public class Star extends TreeDecorator 
{
    Tree tree;

    public Star(Tree tree) 
    {
        this.tree = tree;
    }

    public String getDescription() 
    {
        return tree.getDescription() + ", Star";
    }

    public double cost() 
    {
        return 4.00 + tree.cost();
    }
    
    /*
    public boolean hasStar()
    {
      return tree.hasStar = true;
    }
    */
}
